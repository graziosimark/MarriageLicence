            </div>

            <div class="form-row">

                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.ApplicantPlaceOfBirth, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ApplicantPlaceOfBirth, new { @class = "form-control" })
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.JointApplicantPlaceOfBirth, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.JointApplicantPlaceOfBirth, new { @class = "form-control" })
                </div>


            </div>


            @*==============PARENT INFORMATION================================================================== *@

