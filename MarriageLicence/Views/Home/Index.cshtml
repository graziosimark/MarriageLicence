                    @Html.LabelFor(m => m.ApplicantParent4Name, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ApplicantParent4Name, new { @class = "form-control" })
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.JointApplicantParent4Name, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.JointApplicantParent4Name, new { @class = "form-control" })
                </div>


            </div>

            <div class="form-row">

                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.ApplicantParent4PlaceOfBirth, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ApplicantParent4PlaceOfBirth, new { @class = "form-control" })
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.JointApplicantParent4PlaceOfBirth, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.JointApplicantParent4PlaceOfBirth, new { @class = "form-control" })
                </div>


            </div>



            @************CONTACT INFORMATION*******************************************************************************@

            <div class="form-row">

                <h4>Applicant Contact Information</h4>
                <br />
            </div>

            <div class="form-row">
                <div class="form-group col-md-6 row text-xl-center">
                    <p><strong>Applicant</strong></p>
                </div>
                <div class="form-group col-md-6 row text-xl-center">
                    <p><strong>Joint Applicant</strong></p>
                </div>
            </div>


            <div class="form-row">

                <div class="form-group col-md-6">

                    <div class="form-group col-md-8">

                        @Html.LabelFor(m => m.ApplicantAddress, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.ApplicantAddress, new { @class = "form-control" })
